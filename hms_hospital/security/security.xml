<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>
    ******************* Create a group Category *************************************

    <record model="ir.module.category" id="module_category_hospital">
        <field name="name">Hospital Management</field>
        <field name="description">Category for Hospital</field>
        <field name="sequence">100</field>
    </record>

    ******************************** Create a group ****************************************
    <record id="group_hospital_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_hospital"/>
    </record>

    <record id="group_hospital_doctor_manager" model="res.groups">
        <field name="name">Doctor Manager</field>
        <field name="category_id" ref="module_category_hospital"/>
        <field name="implied_ids" eval="[(4,ref('group_hospital_doctor'))]"></field>
    </record>

    *************************** Record Rules ******************************************************

    <record id="see_all_doctor" model="ir.rule">
        <field name="name">See His/Her Doctor Only</field>
        <field name="model_id" ref="model_hospital_doctor"/>
        <field name="groups" eval="[(4, ref ('group_hospital_doctor'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[(1, '=',1)]</field>
    </record>

    <record id="see_his_own_doctor" model="ir.rule">
        <field name="name">See all Doctor</field>
        <field name="model_id" ref="model_hospital_doctor"/>
        <field name="groups" eval="[(4, ref ('group_hospital_doctor_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
    </record>

<!--************************************** Record Rules for Multi Company *****************************************-->
    <record model="ir.rule" id="patient_multi_company_rule">
        <field name="name">Patient Multi Company Rule</field>
        <field name="model_id" ref="model_hospital_patient"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</odoo>