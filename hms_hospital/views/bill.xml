<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_bill_form" model="ir.ui.view">
        <field name="name">hospital.bill.form</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" type="object" name="action_confirm"
                            string="Confirm" states="draft" class="btn-primary"/>
                    <button id="button_done" type="object" name="action_done"
                            string="Done" states="confirm" class="btn-primary"/>
                    <button id="button_draft" type="object" name="action_draft"
                            string="Draft" states="cancel" class="btn-primary"/>
                    <button id="button_cancel" type="object" name="action_cancel"
                            string="Cancel" states="draft,done,confirm"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Bill" bg_color="bg-success"/>
                    <group string="Bill info">
                        <group>
                            <field name="patient_id"/>
                            <field name="bill_no"/>
                            <field name="doctor_charge"/>
                        </group>
                        <group>
                            <field name="room_charge"/>
                            <field name="no_of_days"/>
                            <field name="lab_charge_bill"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    ***************************** Tree View for Hospital Model *********************************************-->
    <record id="hospital_bill_tree" model="ir.ui.view">
        <field name="name">hospital.bill.tree</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="bill_no"/>
                <field name="doctor_charge"/>
                <field name="room_charge"/>
                <field name="no_of_days"/>
                <field name="lab_charge_bill"/>
            </tree>
        </field>
    </record>

    <!--*************************** Action for Bill Model *****************************************-->
    <record id="hospital_bill_action" model="ir.actions.act_window">
        <field name="name">Bill</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.bill</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Labotary Bill
            </p>
        </field>
    </record>
</odoo>

