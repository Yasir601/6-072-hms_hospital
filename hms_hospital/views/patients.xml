<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.actions.server" id="action_create_bill">
        <field name="name">Create Bill</field>
        <field name="model_id" ref="hms_hospital.model_hospital_patient"/>
        <field name="binding_model_id" ref="hms_hospital.model_hospital_patient"/>
        <field name="state">code</field>
        <field name="code">
            if record:
            action_values = env.ref('hms_hospital.hospital_bill_invoice_action').sudo().read()[0]
            action_values.update({'context': env.context})
            action = action_values
        </field>
    </record>

    <!--******************************************* Confirm Action ***************************************-->
    <record model="ir.actions.server" id="action_confirm_patient">
        <field name="name">Confirm Patient</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_hospital_patient"/>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="state">code</field>
        <field name="code">records.action_confirm()</field>
    </record>

    <!--    ********************** Form View for Patient Model *****************************************-->
    <record id="hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_create_bill" type="action" name="%(create_bill_wizard_action)d"
                            string="Generate Bill" class="btn-primary"/>
                    <button id="button_confirm" type="object" name="action_confirm"
                            string="Confirm" states="draft" class="btn-primary"/>
                    <button id="button_done" type="object" name="action_done"
                            string="Done" states="confirm" class="btn-primary"/>
                    <button id="button_draft" type="object" name="action_draft"
                            string="Draft" states="cancel" class="btn-primary"/>
                    <button id="button_cancel" type="object" name="action_cancel"
                            string="Cancel" states="draft,done,confirm"/>
                    <button type="object" name="print_report"
                            string="Print" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="get_doctor_action"
                                icon="fa-user">
                            <div class="o_stat_info">
                                <field name="doctor_count" class="o_stat_value"/>
                                <span class="o_stat_text">Doctors</span>
                            </div>
                        </button>
                        <button name="toggle_active" icon="fa-archive" class="oe_stat_button" type="object">
                            <field name="active" widget="boolean_button"
                                   option="{&quot;terminology&quot; : &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Patient" bg_color="bg-success"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Name"/>
                    </h1>
                    <group>
                        <group string="Patient Info">
                            <field name="father_name"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="normal_abnormal"/>
                            <field name="date_of_admit"/>
                            <field name="phone_no"/>
                            <field name="p_id" readonly="1"/>
                            <field name="responsible_id"/>
                            <field name="doctor_count"/>
                        </group>
                        <group string="Other Info">
                            <field name="address"/>
                            <field name="age"/>
                            <field name="blood_group"/>
                            <field name="date_of_discharge"/>
                            <field name="laboratory_id"/>
                            <field name="room_id"/>
                            <field name="user_id"/>
                            <field name="email_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook position="inside">
                        <page string="Description">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                        <page name="doctor" string="Doctor">
                            <group>
                                <field name="doctor_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page name="diagnosis" string="Diagnosis">
                            <group>
                                <field name="diagnosis_ids"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <!--    ***************************** Tree View for Animal Model *********************************************-->
    <record id="hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patientl.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='done'" decoration-success="state=='draft'" decoration-muted="state=='cancel'"
                  decoration-warning="state=='confirm'">
                <field name="name"/>
                <field name="father_name"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="phone_no"/>
                <field name="blood_group"/>
                <field name="doctor_ids"/>
                <field name="laboratory_id"/>
                <field name="age"/>
                <field name="normal_abnormal"/>
                <field name="state"/>
                <field name="p_id"/>
                <field name="room_id"/>
                <field name="user_id"/>
                <field name="email_id"/>
                <field name="doctor_count"/>
            </tree>
        </field>
    </record>

    <!--    &lt;!&ndash;    Kanban view for Animal Model&ndash;&gt;-->
    <record id="hospital_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_animal">
                <field name="id"/>
                <field name="father_name"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="address"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Animal" style="width: 100px; height: 100px"
                                     t-att-src="kanban_image('hospital.patient', 'image',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Father Name:
                                        <field name="father_name"/>
                                    </li>
                                    <li>
                                        Date of Birth:
                                        <field name="date_of_birth"/>
                                    </li>
                                    <li>
                                        Address:
                                        <field name="address"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>

                                </ul>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--    &lt;!&ndash;    Search views for Animal Model &ndash;&gt;-->

    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search.view</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patient">
                <filter name="diagnosis_ids_medical" string="Medical" domain="[('diagnosis_ids.name', '=', 'Medical')]"
                        help="Show only Medical Patient"/>
                <filter name="diagnosis_ids_Heart" string="Heart" domain="[('diagnosis_ids.name', '=', 'Heart')]"
                        help="Show only Heart Patients"/>
                <filter name="diagnosis_ids_Neuro" string="Brain" domain="[('diagnosis_ids.name', '=', 'Brain')]"
                        help="Show only Brain Patient"/>
                <separator/>
                <filter name="normal_abnormal" string="Normal or Abnormal" domain="[('normal_abnormal', '=', True)]"
                        help="Normal or Abnormal"/>
                <group string="Group By">
                    <filter name="gender" string="Gender" domain="[]" context="{'group_by' : 'gender'}"/>
                    <filter name="patient_name" string="Name" domain="[]" context="{'group_by' : 'name'}"/>
                </group>

            </search>
        </field>
    </record>

    <!--    ************************************* Pivot view for Patient Form****************************-->
    <record id="hospital_patient_pivot" model="ir.ui.view">
        <field name="name">hospital.patient.pivot</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <pivot string="Patients">
                <field name="laboratory_id"/>
                <field name="age"/>
            </pivot>
        </field>
    </record>

    <!--    ************************************************ Action for inherited res partner Models********************-->

    <record id="hospital_patient_action_res" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_responsible_id' : active_id}</field>
    </record>

    <!--Action for Hospital Patient Model -->
    <record id="hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">kanban,tree,pivot,form</field>
        <field name="context"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Patients here
            </p>
        </field>
    </record>

</odoo>

