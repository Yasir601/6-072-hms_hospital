<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="report_patient_id_card">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe-structure"/>
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table table-condensed"
                                       style="border: 3px solid black; width: 1000px; height: 240px;">
                                    <tr>
                                        <th>Name:</th>
                                        <th>Father Name:</th>
                                        <th>Date of Birth:</th>
                                        <th>Age:</th>
                                        <th>Phone Number:</th>
                                        <th>Address:</th>
                                        <th>Blood Group:</th>
                                        <th>Gender:</th>
                                    </tr>
                                    <tr>
                                        <td width="10%">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td>
                                            <span t-field="o.father_name"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date_of_birth"/>
                                        </td>
                                        <td>
                                            <span t-field="o.age"/>
                                        </td>
                                        <td>
                                            <span t-field="o.phone_no"/>
                                        </td>
                                        <td>
                                            <span t-field="o.address"/>
                                        </td>
                                        <td>
                                            <span t-field="o.blood_group"/>
                                        </td>
                                        <td>
                                            <span t-field="o.gender"/>
                                        </td>
                                    </tr>
                                </table>
                                <table style="border: 2px solid black; width: 200px; height: 100px; ">
                                    <tr>
                                        <td>
                                            <img alt="Barcode"
                                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', o.p_id, 600, 150)"
                                                 style="width:40%;height::4rem;"/>
                                            <span t-field="o.p_id"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>